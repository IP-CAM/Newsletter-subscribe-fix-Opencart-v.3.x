 <file path="admin/model/marketing/newsletter.php">
  <operation error="log">
   <search><![CDATA[$query = $this->db->query("SELECT news_email FROM " . DB_PREFIX . "newsletter WHERE news_email = '" . $newsletter_email . "'");]]></search>
